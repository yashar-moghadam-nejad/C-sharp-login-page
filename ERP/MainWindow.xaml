<Window x:Class="ERP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300">

    <Grid>
        <TextBlock Text="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,40,0,0"/>
        <TextBox x:Name="txtUsername" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,60,0,0"/>

        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0"/>
        <PasswordBox x:Name="txtPassword" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,120,0,0"/>

        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="btnLogin_Click"/>
    </Grid>

</Window>
